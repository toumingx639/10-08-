// 1物理像素边框
border-1px($color, $offset=top)  // $offset指定上下边框
  position relative
  &::before
    position: absolute
    content: ''
    left: 0
    width: 100%
    height 1px
    background-color: $color
    if $offset==bottom  // 下边框
      bottom: 0
    else    // 否则就是上边框
      top: 0
    @media(-webkit-min-device-pixel-ratio: 2),(min-resolution: 2dppx)
      transform scaleY(.5)
    @media(-webkit-min-device-pixel-ratio: 3),(min-resolution: 3dppx)
      transform scaleY(.33)

clearFix()
  &::after
    content: ''
    display: block
    clear both